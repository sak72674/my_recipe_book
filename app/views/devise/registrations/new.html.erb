<div class="wrap">
  <div class="wrap--head">
    <img src="<%= asset_path "logo.png" %>" class="wrap--head__logo">
  </div>
  <div class="wrap--form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="wrap--field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メール", class:"wrap--field__input"  %>
      </div>

      <div class="wrap--field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード(6字以上)", class:"wrap--field__input"  %>
      </div>

      <div class="wrap--field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード(確認)", class:"wrap--field__input"  %>
      </div>

      <div class="wrap--button">
        <%= f.submit "新規登録", class:"button wrap--button__secondary-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
